+				cmd->cmnd[2] = 0x02;
+				cmd->cmnd[6] = 1;
+				cmd->cmnd[8] = ATA_CMD_STANDBYNOW1;
+				cmd->cmnd[13] = ATA_CMD_STANDBYNOW1;
