 		sd_read_cache_type(sdkp, buffer);
 		sd_read_app_tag_own(sdkp, buffer);
 		sd_read_write_same(sdkp, buffer);
+		sd_read_sct_write_same(sdkp, buffer);
 	}
 
 	sdkp->first_scan = 0;
