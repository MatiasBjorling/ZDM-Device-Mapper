+static inline int _do_mem_purge(struct zoned *znd)
+{
+	int do_work = 0;
+
+	if (znd->incore_count > 3) {
+		set_bit(DO_MEMPOOL, &znd->flags);
+		if (!work_pending(&znd->meta_work))
+			do_work = 1;
+	}
+	return do_work;
+}
