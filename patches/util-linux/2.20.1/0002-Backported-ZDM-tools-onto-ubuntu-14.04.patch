+static uint64_t zdm_crc64(zdm_super_block_t *sblk)
+{
+	u64 icrc = sblk->crc64;
+	unsigned char *data = (unsigned char *) sblk;
+	size_t sz = sizeof(*sblk);
+	u64 calc;
+
+	sblk->crc64 = 0ul;
+	calc = crc64(0xFFFFFFFFFFFFFFFFULL, data, sz) ^ 0xFFFFFFFFFFFFFFFFULL;
+	sblk->crc64 = icrc;
+
+	return calc;
+}
